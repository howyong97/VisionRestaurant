@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<link rel="stylesheet" href="~/css/index.css" asp-append-version="true"/>

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Identity
@using VisionRestaurant.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<h2>Welcome to Vision Restaurant</h2>
<body>
    @if (SignInManager.IsSignedIn(User))
    {
        <h2>Hello @UserManager.GetUserName(User)</h2>
        if (User.IsInRole("Administrator"))
        {
            <h2>Admin Panel</h2>
            <a class="admin nav" asp-area="" asp-page="/Foods/Index">Food Menu Editing</a>
            
        }
    }

    <img src="~/image/bg1.png" class="cookchef"/>
    <div class="desc">
        <p>This is the restaurant that does not exists.</p>
    </div>
    

</body>




